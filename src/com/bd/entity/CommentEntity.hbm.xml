<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bd.entity.CommentEntity" table="comment" schema="blog" lazy="false">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
            <generator class="native"/>
        </id>
        <property name="floor">
            <column name="floor" sql-type="int(12)" not-null="false"/>
        </property>
        <property name="time">
            <column name="time" sql-type="date" not-null="false"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(16)" length="16" not-null="false"/>
        </property>
        <property name="content">
            <column name="content" sql-type="longtext" not-null="false"/>
        </property>
        <many-to-one name="blogArticle" class="com.bd.entity.BlogArticleEntity">
            <column name="baId" not-null="false"/>
        </many-to-one>
        <many-to-one name="parent" class="com.bd.entity.CommentEntity">
            <column name="cId" not-null="false"/>
        </many-to-one>
        <set name="children" inverse="true">
            <key>
                <column name="cId" not-null="false"/>
            </key>
            <one-to-many class="com.bd.entity.CommentEntity"/>
        </set>
    </class>
</hibernate-mapping>