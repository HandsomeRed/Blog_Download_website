<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bd.entity.InformationEntity" table="information" schema="blog">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
        </id>
        <property name="type">
            <column name="type" sql-type="tinyint(1)" not-null="true"/>
        </property>
        <property name="time">
            <column name="time" sql-type="date" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(8)" length="8" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="longtext" not-null="true"/>
        </property>
        <many-to-one name="userByUId" class="com.bd.entity.UserEntity">
            <column name="uId" not-null="true"/>
        </many-to-one>
        <many-to-one name="userByTargetId" class="com.bd.entity.UserEntity">
            <column name="targetId" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>